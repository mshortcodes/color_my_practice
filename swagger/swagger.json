{
  "openapi": "3.1.1",
  "info": {
    "title": "Color My Practice",
    "description": "An API for music students to log their practice times in a fun, simple way. Visit the [GitHub](https://github.com/mshortcodes/color_my_practice) page for more info.\n\nEndpoints with a lock represent authenticated endpoints. These require cookies which the browser will handle automatically.\n\nInteractive documentation generated with [Swagger UI](https://swagger.io/tools/swagger-ui/).",
    "version": "1.0.0"
  },
  "tags": [
    {
      "name": "users",
      "description": "Interact with the user resource"
    },
    {
      "name": "logs",
      "description": "Perform CRUD operations on practice logs"
    },
    {
      "name": "auth",
      "description": "Manage authentication"
    },
    {
      "name": "other"
    }
  ],
  "paths": {
    "/api/users": {
      "post": {
        "summary": "Creates a new user.",
        "description": "Password must be at least 8 characters long.",
        "tags": ["users"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UsersRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UsersResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "summary": "Updates a user's email and password.",
        "description": "Password must be at least 8 characters long.",
        "tags": ["users"],
        "security": [
          {
            "jwt": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UsersRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UsersResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/logs": {
      "get": {
        "summary": "Returns an array of logs.",
        "description": "Insecure endpoint. Defaults to descending order (newest to oldest).",
        "tags": ["logs"],
        "parameters": [
          {
            "name": "user_id",
            "in": "query",
            "description": "Filter logs by user ID.",
            "required": false,
            "schema": {
              "type": "string",
              "format": "uuid",
              "example": "d4eeefe3-0a27-4d72-8c43-32dd02f6cd1c"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "example": [
                  {
                    "id": "c8600bd1-6e75-43af-8d7c-bb122c01f541",
                    "date": "2024-12-12",
                    "color_depth": 5,
                    "confirmed": true,
                    "user_id": "d4eeefe3-0a27-4d72-8c43-32dd02f6cd1c"
                  },
                  {
                    "id": "86a508f5-32a8-41e0-b6c8-660869583efc",
                    "date": "2024-12-11",
                    "color_depth": 2,
                    "confirmed": false,
                    "user_id": "d4eeefe3-0a27-4d72-8c43-32dd02f6cd1c"
                  }
                ],
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/LogsResponse"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "summary": "Creates a practice log for the given day.",
        "description": "date must be YYYY-MM-DD format.\n\ncolor_depth must be between 1 and 5.",
        "tags": ["logs"],
        "security": [
          {
            "jwt": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "example": {
                "date": "2024-12-12",
                "color_depth": 5
              },
              "schema": {
                "$ref": "#/components/schemas/LogsPostRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "example": {
                  "id": "c8600bd1-6e75-43af-8d7c-bb122c01f541",
                  "date": "2024-12-12",
                  "color_depth": 5,
                  "confirmed": false,
                  "user_id": "8f88ab37-133f-411b-bd0f-134c614c390a"
                },
                "schema": {
                  "$ref": "#/components/schemas/LogsResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/logs/{logID}": {
      "get": {
        "summary": "Returns a log by its ID.",
        "tags": ["logs"],
        "parameters": [
          {
            "name": "logID",
            "in": "path",
            "description": "Filter logs by log ID. Returns a single log.",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid",
              "example": "c8600bd1-6e75-43af-8d7c-bb122c01f541"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "example": {
                  "id": "c8600bd1-6e75-43af-8d7c-bb122c01f541",
                  "date": "2024-12-12",
                  "color_depth": 5,
                  "confirmed": true,
                  "user_id": "d4eeefe3-0a27-4d72-8c43-32dd02f6cd1c"
                },
                "schema": {
                  "$ref": "#/components/schemas/LogsResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "summary": "Deletes a log by ID.",
        "tags": ["logs"],
        "security": [
          {
            "jwt": []
          }
        ],
        "parameters": [
          {
            "name": "logID",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid",
              "example": "c8600bd1-6e75-43af-8d7c-bb122c01f541"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/logs/confirm": {
      "put": {
        "summary": "Sets the confirmed field to true for all logs given in the array.",
        "tags": ["logs"],
        "security": [
          {
            "jwt": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "example": {
                "log_ids": [
                  "c8600bd1-6e75-43af-8d7c-bb122c01f541",
                  "86a508f5-32a8-41e0-b6c8-660869583efc"
                ],
                "password": "********"
              },
              "schema": {
                "$ref": "#/components/schemas/LogsConfirmRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "example": [
                  {
                    "id": "c8600bd1-6e75-43af-8d7c-bb122c01f541",
                    "date": "2024-12-12",
                    "color_depth": 5,
                    "confirmed": true,
                    "user_id": "d4eeefe3-0a27-4d72-8c43-32dd02f6cd1c"
                  },
                  {
                    "id": "86a508f5-32a8-41e0-b6c8-660869583efc",
                    "date": "2024-12-11",
                    "color_depth": 2,
                    "confirmed": false,
                    "user_id": "d4eeefe3-0a27-4d72-8c43-32dd02f6cd1c"
                  }
                ],
                "schema": {
                  "oneOf": [
                    {
                      "$ref": "#/components/schemas/LogsResponse"
                    },
                    {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/LogsResponse"
                      }
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/login": {
      "post": {
        "summary": "Logs a user in.",
        "description": "Sends the 'jwt' and 'refresh_token' cookies.",
        "tags": ["auth"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UsersRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UsersResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/refresh": {
      "post": {
        "summary": "Sends a new JWT after validating the refresh token.",
        "description": "Sends the 'jwt' cookie.",
        "tags": ["auth"],
        "security": [
          {
            "refresh_token": []
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/revoke": {
      "post": {
        "summary": "Revokes a refresh token.",
        "tags": ["auth"],
        "security": [
          {
            "refresh_token": []
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/status": {
      "get": {
        "summary": "Serves a simple status page.",
        "tags": ["other"],
        "responses": {
          "200": {
            "description": "Success"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "UsersRequest": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "format": "password",
            "description": "Password must be at least 8 characters long."
          }
        }
      },
      "UsersResponse": {
        "type": "object",
        "required": ["id", "created_at", "updated_at", "email"],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          },
          "email": {
            "type": "string",
            "format": "email"
          }
        }
      },
      "LogsPostRequest": {
        "type": "object",
        "required": ["date", "color_depth"],
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "color_depth": {
            "type": "number",
            "format": "int32",
            "description": "date must be YYYY-MM-DD format.\n\ncolor_depth must be between 1 and 5."
          }
        }
      },
      "LogsResponse": {
        "type": "object",
        "required": ["id", "date", "color_depth", "confirmed", "user_id"],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "color_depth": {
            "type": "number",
            "format": "int32"
          },
          "confirmed": {
            "type": "boolean"
          },
          "user_id": {
            "type": "string",
            "format": "uuid"
          }
        }
      },
      "LogsConfirmRequest": {
        "type": "object",
        "required": ["log_ids", "password"],
        "properties": {
          "log_ids": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uuid"
            }
          },
          "password": {
            "type": "string",
            "format": "password"
          }
        }
      }
    }
  }
}
